<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.update.UpdateFragment"
    android:padding="24dp">

    <EditText
        android:id="@+id/UpdateTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:paddingStart="24dp"
        android:paddingLeft="24dp"
        android:inputType="textPersonName"
        android:hint="Name"
        android:drawableLeft="@drawable/ic_account"
        android:drawableTint="#5763E3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056" />

    <EditText
        android:id="@+id/UpdateTextEquipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:paddingStart="24dp"
        android:paddingLeft="24dp"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_equipment"
        android:hint="Equipment"
        app:layout_constraintEnd_toEndOf="@+id/UpdateTextPersonName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/UpdateTextPersonName"
        app:layout_constraintTop_toBottomOf="@+id/UpdateTextPersonName" />

    <EditText
        android:id="@+id/UpdateTextDate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:paddingStart="24dp"
        android:paddingLeft="24dp"
        android:hint="Date"
        android:inputType="date"
        android:drawableLeft="@drawable/ic_calendar"
        app:layout_constraintEnd_toEndOf="@+id/UpdateTextEquipment"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/UpdateTextEquipment"
        app:layout_constraintTop_toBottomOf="@+id/UpdateTextEquipment" />

    <EditText
        android:id="@+id/UpdateTextTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:paddingStart="24dp"
        android:paddingLeft="24dp"
        android:hint="Time"
        android:inputType="time"
        android:drawableLeft="@drawable/ic_time"
        app:layout_constraintEnd_toEndOf="@+id/UpdateTextDate2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/UpdateTextDate2"
        app:layout_constraintTop_toBottomOf="@+id/UpdateTextDate2" />

    <EditText
        android:id="@+id/UpdateTextTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:paddingStart="24dp"
        android:paddingLeft="24dp"
        android:inputType="number"
        android:hint="Temprature"
        android:drawableLeft="@drawable/ic_therm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/UpdateTextTime2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/UpdateTextTime2"
        app:layout_constraintTop_toBottomOf="@+id/UpdateTextTime2"
        app:layout_constraintVertical_bias="0.205" />

    <Button
        android:id="@+id/update_btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Mettre Ã  jour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />
</androidx.constraintlayout.widget.ConstraintLayout>

