<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.add.AddFragment">


    <EditText
        android:id="@+id/TextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:paddingStart="24dp"
        android:paddingLeft="24dp"
        android:inputType="textPersonName"
        android:hint="Name"
        android:drawableLeft="@drawable/ic_account"
        android:drawableTint="#5763E3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056" />

    <EditText
        android:id="@+id/TextEquipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:paddingStart="24dp"
        android:paddingLeft="24dp"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_equipment"
        android:hint="Equipment"
        app:layout_constraintEnd_toEndOf="@+id/TextPersonName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TextPersonName"
        app:layout_constraintTop_toBottomOf="@+id/TextPersonName" />

    <EditText
        android:id="@+id/TextDate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:paddingStart="24dp"
        android:paddingLeft="24dp"
        android:hint="Date"
        android:inputType="date"
        android:drawableLeft="@drawable/ic_calendar"
        app:layout_constraintEnd_toEndOf="@+id/TextEquipment"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TextEquipment"
        app:layout_constraintTop_toBottomOf="@+id/TextEquipment" />

    <EditText
        android:id="@+id/TextTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:paddingStart="24dp"
        android:paddingLeft="24dp"
        android:hint="Time"
        android:inputType="time"
        android:drawableLeft="@drawable/ic_time"
        app:layout_constraintEnd_toEndOf="@+id/TextDate2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/TextDate2"
        app:layout_constraintTop_toBottomOf="@+id/TextDate2" />

    <EditText
        android:id="@+id/TextTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:paddingStart="24dp"
        android:paddingLeft="24dp"
        android:inputType="number"
        android:hint="Temprature"
        android:drawableLeft="@drawable/ic_therm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/TextTime2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TextTime2"
        app:layout_constraintTop_toBottomOf="@+id/TextTime2"
        app:layout_constraintVertical_bias="0.205" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Ajouter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />
</androidx.constraintlayout.widget.ConstraintLayout>